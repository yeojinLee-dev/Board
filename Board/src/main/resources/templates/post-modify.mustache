{{>layout/header}}
{{>layout/menu}}

<div class="col-md-12">
    <h2>게시글 수정</h2><br>
    <div class="col-md-6">
        <form>
            <div class="form-group">
                <h5 id="category" style="color: #6A82FB;font-size: small">{{post.category.name}} ></h5>
                <label for="category">
                    <select name="category" id="category">
                        <option value={{post.category.category_id}}>{{post.category.name}}</option>
                        <option value="none">--게시판 선택--</option>
                        {{#category}}
                            <option value={{category_id}}>{{name}}</option>
                        {{/category}}
                    </select>
                </label>
            </div>
            <input type="text" id="post_id" value="{{post.post_id}}" style="display: none">
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" placeholder="제목 입력" value={{post.title}}><br><br>
            </div>
            <div class="form-group">
                <label for="login_id">작성자</label>
                <input type="text" class="form-control" id="login_id" value={{post.member.login_id}} readonly><br><br>
            </div>
            <div class="form-group">
                <label for="content">게시글</label>
                <textarea class="form-control" id="content" placeholder="내용을 입력하세요" >{{post.content}}</textarea><br><br>
            </div>
        </form>
        <label for="currentPage">
            <input type="hidden" id="currentPage" value={{currentPage}}>
        </label>
        <a href="/Board/post/read/{{post.post_id}}&page={{currentPage}}" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">완료</button>
    </div>
</div>




{{>layout/footer}}