{{>layout/header}}

<div class="col-md-12">
    <h2>게시글 수정</h2><br><br>
    <div class="col-md-6">
        <form>
            <div class="form-group">
                <label for="seq_id">번호</label>
                <input type="text" class="form-control" id="seq_id" value="{{post_id}}" readonly><br><br>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}"><br><br>
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-control" id="author" value="{{login_id}}" readonly> <br><br>
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content">{{post.content}}</textarea><br><br>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">목록</a>
        <button type="button" class="btn btn-primary" id="btn-update">완료</button>
    </div>
</div>




{{>layout/footer}}