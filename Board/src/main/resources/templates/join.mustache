{{>layout/header}}
    <div style="align-content: center">
        <div class="col-md-4">
           <h2>회원가입</h2><br><br>
            <form>
                <div class="form-group">
                    <label for="login_id">아이디</label>
                    <input type="text" class="form-control" id="login_id" placeholder="아이디"><br>
                    <button type="button" class="btn btn-secondary" id="btn-check-duplicate">아이디 중복 확인</button><br>
                    <span class="login_id_ok" style="color:#6A82FB; display:none;" >사용 가능한 아이디입니다.</span>
                    <span class="login_id_already" style="color:#fb6a6a; display:none;" >사용 불가능한 아이디입니다.</span><br>
                </div>
                <div class="form-group">
                    <label for="password1">비밀번호</label>
                    <input type="password" class="form-control" id="password1" placeholder="비밀번호"><br>
                </div>
                <div class="form-group">
                    <label for="password2">비밀번호 확인</label>
                    <input type="password" class="form-control" id="password2" placeholder="비밀번호 재입력"><br>
                    <span class="pw_same" style="color:#6A82FB; display:none;" >비밀번호 확인</span>
                    <span class="pw_not_same" style="color:#6A82FB; display:none;" >비밀번호를 다시 입력해주십시오.</span><br>
                </div>
                <div class="form-group">
                    <label for="name">이름</label>
                    <input type="text" class="form-control" id="name" placeholder="이름"><br>
                </div>
                <div class="form-group">
                    <label for="email">이메일</label>
                    <input type="text" class="form-control" id="email" placeholder="이메일"><br>
                </div>
                <div class="form-group">
                    <label for="phone">전화번호</label>
                    <input type="text" class="form-control" id="phone" placeholder="전화번호"><br>
                </div>
            </form>
        </div>
        <button type="button" id="btn-join" class="btn btn-primary">가입하기</button>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
    </div>

{{>layout/footer}}