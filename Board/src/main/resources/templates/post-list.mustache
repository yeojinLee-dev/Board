{{>layout/header}}
<!-- 목록 출력 영역 -->
{{>layout/menu}}
<div class="row" style="">
    {{#login_id}}
        <div style="float: left; margin-left: 12%">
            <a href="/post/new" role="button" class="btn btn-primary ">등록하기</a><br>
        </div>
    {{/login_id}}
    <div style="float: left; margin-left: 200px; margin-right: 200px">
        <label for="query"></label>
        <input type="text" id="query" style="width: 600px" placeholder="제목으로 검색" value={{query}}>
        <input type="button" id="btn-post-search" class="btn-secondary" value="검색" style="padding-left: 10px">
    </div>
    {{^login_id}}
        <div style="float: right; margin-left: 150px; margin-right: 10px">
            <a href="/" class="btn btn-primary" role="button">로그인</a>
        </div>
    {{/login_id}}
    {{#login_id}}
        <div style="float: right; margin-left: 100px; margin-right: 10px">
            <button id="btn-logout" class="btn btn-danger" type="button">로그아웃</button>
        </div>
        <div style="float: left; margin-right: 10px;">
            <a href="/member/info" role="term">{{login_id}}</a>
            <span>님</span>
        </div>
    {{/login_id}}
</div>
<br>
<table class="table table-horizontal table-bordered" style="width: 90%; padding-top: 150px; float: right">
            <thead class="thead-strong">
            <tr>
                <th style="width: 10%;align-content: center;">게시글 번호</th>
                <th style="width: 15%;align-content: center;">분류</th>
                <th style="width: 45%;align-content: center;">제목</th>
                <th style="width: 20%;align-content: center;">작성자</th>
                <th style="width: 20%;align-content: center;">작성 날짜</th>
            </tr>
            </thead>
            <tbody id="tbody">
            <input type="hidden" id="category" value={{category}}>
            {{#list}}  <!-- post 라는 list 를 순회(반복문)한다. -->
            <tr>
                <td id="post_id">{{post_id}}</td>
                <td>{{category.name}}</td>
                <td><a type="button" href="/post/{{post_id}}?page={{page}}&category={{category.category_id}}&query={{query}}" id="btn-title">{{title}}</a> [{{comment_count}}]</td>
                <td>{{member.login_id}}</td>
                <td>{{created_date}}</td>
                <!-- 수정 날짜 -->
            </tr>
            {{/list}}
            </tbody>
</table>

<br><br>
<div style="align-content: center;">
    <table style="margin-left: auto; margin-right: auto; width: 300px">
        {{#pageBtn}}
            <th><a type="button" id="btn-pageNum" href="/board?page={{pageNumber}}&category={{category}}&query={{query}}">{{button}}</a></th>
        {{/pageBtn}}
    </table>
</div>
{{>layout/footer}}